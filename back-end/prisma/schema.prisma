generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String

  createdAt DateTime @default(now())
}
model Song{
  id String @id @default(uuid())
  title String
  runtime Int
  genres String[] @default([])
  createdBy String
  createdAt DateTime @default(now())
}
model FavoutiteSong{
  id  String @id @default(uuid())
  UserId String
  SongId String
  createdAt DateTime @default(now())

}
generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
model User{
  id        Int         @id@default(autoincrement())
  email     String      @unique
  password  String
  Username  String?     @unique
  createdAt DateTime    @default(now())
  playlists Playlist[] @relation("playlists")
  likes     Like[] @relation("likes")
  playHistories PlayHistory[] @relation("playHistories")
}
model Music{
  id          Int          @id@default(autoincrement())
  title       String
  artist      String
  genre       String
  duration    Int
  audioUrl    String
  createdAt   DateTime @default(now())
  playlistMusics PlaylistMusic[] @relation("playlistMusics")
  likes       Like[] @relation("likes")
  playHistories PlayHistory[] @relation("playHistories")
}
model Artist{
  id        Int         @id@default(autoincrement())
  name      String
  bio       String?
  imageUrl  String?
  createdAt DateTime @default(now())
}
model Playlist{
  id        Int     @id @default(autoincrement())
  name      String
  UserId    Int
  user      User    @relation("playlists", fields: [UserId], references: [id])
  playlistMusics PlaylistMusic[] @relation("playlistMusics")
  createdAt DateTime @default(now())
}
model PlaylistMusic{
  id            Int @id@default(autoincrement())
  PlaylistId    Int
  MusicId       Int
  playlist      Playlist @relation("playlistMusics", fields: [PlaylistId], references: [id])
  music         Music @relation("playlistMusics", fields: [MusicId], references: [id])
  addedAt       DateTime @default(now())
  @@unique([PlaylistId, MusicId])
}
model Like{
  id            Int @id@default(autoincrement())
  userId        Int
  MusicId       Int
  user          User @relation("likes", fields: [userId], references: [id])
  music         Music @relation("likes", fields: [MusicId], references: [id])
  
  @@unique([userId, MusicId])
}
model PlayHistory{
  id            Int @id@default(autoincrement())
  UserId        Int
  MusicId       Int
  user          User @relation("playHistories", fields: [UserId], references: [id])
  music         Music @relation("playHistories", fields: [MusicId], references: [id])
  playedat     DateTime@default(now())
}
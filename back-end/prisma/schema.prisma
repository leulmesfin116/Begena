generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
   url      = env("DATABASE_URL")
 
}
model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String

  createdAt DateTime @default(now())
// back relation
 playlist  Playlist[]
 favouriteSong FavouriteSong[]
 recentlyplayed Recentlyplayed[]


}
model Song{
  id String @id @default(uuid())
  title String
  artist String
  posterUrl String
  runtime Int?
  genres String[] @default([])
  createdBy String
  createdAt DateTime @default(now())
  //  back relation
  favouritedby FavouriteSong[]
  playedin Recentlyplayed[]
  playlists Playlist[] 
  }
model FavouriteSong{
  id  String @id @default(uuid())
  userId String
  songId String
  createdAt DateTime @default(now())

  favUser User @relation(fields:[userId], references:[id] ,onDelete:Cascade)
  favsong Song @relation(fields:[songId], references:[id] ,onDelete:Cascade)
}
model Recentlyplayed{
  id String @id @default(uuid())
 userId String
  songId String
  playedAt DateTime @default(now())

  RecPlayed User @relation(fields:[userId], references:[id],onDelete:Cascade)
  RecSong Song  @relation(fields:[songId], references:[id],onDelete:Cascade)

  }
  model Playlist{
    id String @id @default(uuid())
    userId String
    songId String
    // relations
    user User @relation(fields:[userId], references:[id], onDelete:Cascade)
    song Song @relation(fields:[songId], references:[id],onDelete:Cascade)
  }
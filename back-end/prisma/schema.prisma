generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
model User{
  id        Int         @id@default(autoincrement())
  email     String      @unique
password    string
Username    string? @unique
createdAt    DateTime @default
Playlists   Playlist[]
}
model Music{
  id          Int          @id@default(autoincrement())
  title       String
  artist      String
  genre       String
  duration    Int
  audioUrl    String
  createdAt   DateTime @default(now())
}
model Artist{
  id        Int         @id@default(autoincrement())
  name      String
  bio       String?
  imageUrl  String?
  createdAt DateTime @default(now())
}
model Playlist{
  id        Int     @id@default(increment())
  name      string
  UserId    Int
  createdAt DateTime @default(now())
}
model PlaylistMusic{
  id            Int @id@default(autoincrement())
  PlaylistId    Int
  MusicId       Int
  addedAt       DateTime @default(now())
}